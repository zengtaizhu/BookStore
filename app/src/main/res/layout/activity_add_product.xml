<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_pro_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:background="@drawable/gradual_change_shape">
        <ImageView
            android:id="@+id/iv_pro_add_back"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/add_pro"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pro_add_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradual_change_shape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/commit"
        android:textSize="25sp"
        android:textColor="@color/text_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rl_pro_add"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pro_add_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:background="@color/background_gray"
                android:src="@mipmap/ic_add_pro_img"/>
            <TextView
                android:id="@+id/tv_pro_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_pro_add_img"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/title"
                android:textSize="25sp"
                android:textColor="@color/text_color"/>
            <EditText
                android:id="@+id/et_pro_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/tv_pro_add_title"
                android:layout_marginTop="15dp"
                android:hint="请输入新书名"
                android:textSize="22sp"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/tv_pro_add_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_pro_add_img"
                android:layout_below="@id/tv_pro_add_title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/author"
                android:textSize="24sp"
                android:textColor="@color/text_color"/>
            <EditText
                android:id="@+id/et_pro_add_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/tv_pro_add_author"
                android:layout_below="@id/tv_pro_add_title"
                android:layout_marginTop="15dp"
                android:hint="请输入新的作者"
                android:textSize="22sp"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divide_color"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/press"
                android:textSize="23sp"
                android:textColor="@color/text_color"/>
            <EditText
                android:id="@+id/et_pro_add_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:hint="请输入新出版社"
                android:textSize="22sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divide_color"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="22sp"
                android:textColor="@color/text_red"/>
            <EditText
                android:id="@+id/et_pro_add_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:hint="请输入价格"
                android:textSize="22sp"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/count"
                android:textSize="22sp"
                android:textColor="@color/text_red"/>
            <EditText
                android:id="@+id/et_pro_add_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divide_color"></View>
        <RelativeLayout
            android:id="@+id/rl_pro_add_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textSize="23sp"
                android:textColor="@color/text_color"/>
            <ImageView
                android:id="@+id/iv_category_to_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tv_pro_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_category_to_right"
                android:layout_marginRight="10dp"
                android:text="@string/category"
                android:textSize="18sp"
                android:textColor="@color/text_gray"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divide_color"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/describe"
                android:textSize="22sp"
                android:textColor="@color/text_black"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/et_pro_add_describe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/background_gray"
                android:hint="请输入对商品的描述(100字以内，选填)"
                android:textSize="21sp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>