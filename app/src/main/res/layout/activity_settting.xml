<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray">
        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_back"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_setting_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/setting"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_user"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/background_white"
        android:paddingStart="10dp"
        android:layout_below="@id/rl_setting">
        <com.de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_setting_user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_setting_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/civ_setting_user_img"
            android:layout_marginTop="10dp"
            android:text="@string/user_id"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/tv_setting_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/civ_setting_user_img"
            android:layout_below="@id/tv_setting_user_id"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/username"
            android:textSize="18sp"
            android:textColor="@color/text_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_color"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/rl_setting_user">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/receive_location"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_gray"
        android:layout_below="@id/rl_setting_location"></View>
    <RelativeLayout
        android:id="@+id/rl_setting_change_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_setting_location">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_password"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_gray"
        android:layout_below="@id/rl_setting_change_psw"></View>
    <RelativeLayout
        android:id="@+id/rl_setting_problem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_setting_change_psw">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/commit_problem"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_gray"
        android:layout_below="@id/rl_setting_problem"></View>

    <TextView
        android:id="@+id/tv_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/tv_shape"
        android:text="@string/logout"
        android:textSize="20sp"
        android:textColor="@color/text_while"/>
</RelativeLayout>