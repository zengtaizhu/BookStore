<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@color/background_blue">
        <ImageView
            android:id="@+id/iv_find_password_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/toolbar_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/reset_password"
            android:textSize="25sp"
            android:textColor="@color/text_color"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/new_password"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_input_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="@string/input_new_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="@color/text_black"/>
            <!--清除新密码的按钮-->
            <ImageView
                android:id="@+id/iv_clear_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_clear"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:visibility="invisible"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="密码由6-20位英文字母、数字或符号组成"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btn_commit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="@string/commit_new_password"
        android:textColor="@color/text_while"
        android:textSize="18sp"/>
</LinearLayout>