<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divide_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background_gray"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_cart_pro_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:button="@drawable/cart_checkbox"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cart_pro_img"
                android:layout_width="90dp"
                android:layout_height="88dp"
                android:src="@mipmap/ic_launcher"
                android:background="@color/background_white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_cart_pro_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="@string/title"
                    android:textSize="18sp"
                    android:textColor="@color/text_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuan"
                        android:textColor="@color/text_orange"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_cart_pro_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/text_orange"
                        android:textSize="18sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_cart_pro_plus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_plus"
                            android:background="@color/background_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/et_cart_pro_count"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_toLeftOf="@id/iv_cart_pro_plus"
                            android:enabled="false"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="18sp"
                            android:textColor="@color/text_black"/>
                        <ImageView
                            android:id="@+id/iv_cart_pro_minus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_minus"
                            android:background="@color/background_gray"
                            android:layout_toLeftOf="@id/et_cart_pro_count"
                            android:layout_centerVertical="true"
                            android:padding="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>