    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="com.project.zeng.bookstore.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.project.zeng.bookstore.ui.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.zeng.bookstore.ui.LoginActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.project.zeng.bookstore.ui.SearchActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.project.zeng.bookstore.ui.ProductsActivity"></activity>
        <activity android:name="com.project.zeng.bookstore.ui.ProductDetailActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name="com.project.zeng.bookstore.ui.RegisterActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.project.zeng.bookstore.ui.FindPasswordActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.project.zeng.bookstore.ui.RegisterPswActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.project.zeng.bookstore.ui.frgm.CartActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>